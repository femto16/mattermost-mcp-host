# Mattermost Configuration
MATTERMOST_URL=localhost
MATTERMOST_TOKEN=your_mattermost_token
MATTERMOST_SCHEME=http
MATTERMOST_PORT=8065
MATTERMOST_TEAM_NAME=your_team_name
MATTERMOST_CHANNEL_NAME=mcp-client
MATTERMOST_CHANNEL_ID=

# MCP Configuration
MCP_SERVER_TYPE=stdio
MCP_SERVER_NAME=simple-mcp-server
MCP_COMMAND=python
MCP_ARGS=simple-mcp-server/server.py
COMMAND_PREFIX=/

# Logging Configuration
LOG_LEVEL=INFO

# LLM Configuration
DEFAULT_PROVIDER=azure  # Options: azure, openai, anthropic, gemini
DEFAULT_MODEL=gpt-4o

# OpenAI Configuration (when using OpenAI directly)
OPENAI_API_KEY=your_openai_api_key
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_API_VERSION=
OPENAI_ORGANIZATION=
OPENAI_PROJECT=
OPENAI_MODEL=gpt-4o

# Azure OpenAI Configuration (when using Azure)
AZURE_OPENAI_API_KEY=your_azure_openai_key
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT=gpt-4o

# Anthropic Configuration (when using Claude)
ANTHROPIC_API_KEY=your_anthropic_api_key
ANTHROPIC_MODEL=claude-3-opus-20240229

# Google Gemini Configuration
GOOGLE_API_KEY=your_google_api_key
GEMINI_MODEL=gemini-1.5-pro
